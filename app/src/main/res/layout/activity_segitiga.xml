<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersegiActivity">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Segitiga Sama Kaki"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@color/colorCustom1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutTinggiSegitiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Tinggi Segitiga (cm)"
            app:hintTextColor="#333"
            app:boxStrokeColor="#333"
            android:textColorHint="#333"
            app:boxBackgroundColor="#333"
            android:outlineSpotShadowColor="#333"
            android:layout_marginBottom="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTinggiSegitiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="#333"
                app:boxStrokeColor="#333"
                android:textColorHint="#333"
                android:textColor="#333"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayoutAlasSegitiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Alas Segitiga (cm)"
            app:hintTextColor="#333"
            app:boxStrokeColor="#333"
            android:textColorHint="#333"
            app:boxBackgroundColor="#333"
            android:outlineSpotShadowColor="#333"
            android:layout_marginBottom="20dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtAlasSegitiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="#333"
                app:boxStrokeColor="#333"
                android:textColorHint="#333"
                android:textColor="#333"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Hasil Perhitungan"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@color/colorCustom1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginBottom="50dp"
                android:text="Keliling: "
                android:textSize="25dp"
                android:textAlignment="textStart"
                android:fontFamily="cursive"
                android:textFontWeight="900"
                android:textColor="#333"/>
            <TextView
                android:id="@+id/hasilKllSegitiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:layout_marginBottom="50dp"
                android:text="0 cm"
                android:textSize="25dp"
                android:textAlignment="textStart"
                android:fontFamily="cursive"
                android:textFontWeight="900"
                android:textColor="#333"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginBottom="50dp"
                android:text="Luas: "
                android:textSize="25dp"
                android:textAlignment="textStart"
                android:fontFamily="cursive"
                android:textFontWeight="900"
                android:textColor="#333"/>
            <TextView
                android:id="@+id/hasilLuasSegitiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="75"
                android:layout_marginBottom="50dp"
                android:text="0 cm"
                android:textSize="25dp"
                android:textAlignment="textStart"
                android:fontFamily="cursive"
                android:textFontWeight="900"
                android:textColor="#333"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"/>
        <Button
            android:id="@+id/btnHitungSegitiga"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Hitung!"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:background="@drawable/button_bacground"
            style="@style/TextAppearance.AppCompat.Button"
            />
    </LinearLayout>

</RelativeLayout>